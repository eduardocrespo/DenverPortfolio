{% extends 'FreelanceDenverPortfolioBundle::base.html.twig' %}
{% block title %}Home{% endblock %}
{% block body %}
    {% if videoattributes is not empty %}
        <div class="videocontainer span12">
            <div class="gamerow row">
                <div class="hidden-xs hidden-sm col-md-3 col-md-3 col-lg-3">{{ "Title"|trans|raw}}:</div>

                <div class="hidden-xs hidden-sm col-md-3 col-lg-3">{{ 'URL'|trans}}:</div>

                <div class="hidden-xs hidden-sm col-md-6 col-lg-6">{{ 'description2'|trans({}, 'SonataUserBundle')}}:</div>
             </div>
    {% endif %}
        {% for key, attribute in videoattributes %}
                {% if attribute is not empty %} 
                        <div class="gamerow row span12{{ cycle(['odd', 'even'], loop.index0) }}">
                            <div class="col-sm-3">{{ attribute.title|trans}}</div>

                            <div class=" col-sm-3">{{ attribute.url|trans}}</div>

                            <div class=" col-sm-6">{{ attribute.description|trans }}</div>                             
                        </div>
        </div>  
                {% endif %}
        {% endfor %}
{% endblock %}

