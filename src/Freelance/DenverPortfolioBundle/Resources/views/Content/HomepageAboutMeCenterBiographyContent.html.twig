    <div id="myAboutMainCarousel" class="carousel slide text-center col-sm-6" data-interval="false" data-ride="carousel">
        <ol class="carousel-indicators">
            {% for key, attribute in homepageAboutMeCenterBiographyContent %}
                {% if attribute is not empty and  homepageAboutMeCenterBiographyContent|length > 0%}
                    <li data-target="#myAboutMainCarousel" data-slide-to="{{ loop.index0}}" {% if loop.index0 == 0 %}class="active" {% endif %}></li>
                {% endif %}
            {% endfor %}
        </ol> 
        <div class="carousel-inner">
            {% for key, attribute in homepageAboutMeCenterBiographyContent %}
                {% if attribute is not empty %}
                    <div class="item {% if loop.index0 == 0 %}active{% endif %}">
                       <div class="col-sm-12 col-md-12 col-lg-12">{{ attribute.biography|trans }}</div> 
                    </div>
                {% endif %}
            {% endfor %}
        </div>
        {% if homepageAboutMeCenterBiographyContent|length > 1 %}
            <a class="carousel-control left" href="#myAboutMainCarousel" data-slide="prev">
                <span class="icon-prev"></span>
            </a>
            <a class="carousel-control right" href="#myAboutMainCarousel" data-slide="next">
                <span class="icon-next"></span>
            </a>
        {% endif %}

    </div>
        
    



