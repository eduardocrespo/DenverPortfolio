{% block homepageVideoGallery %}
    {% for key, attribute in homepageVideoGallery %}
        {% if attribute is not empty and  homepageVideoGallery|length == 1  %}
            <div class="text-center col-xs-12 col-sm-12 col-md-12 col-lg-12">
                {% media attribute.id, 'small' with {'class': 'img-responsive'} %}
            </div>
        {% elseif attribute is not empty and  homepageVideoGallery|length == 2  %}
                <div class="text-center col-xs-12 col-sm-6 col-md-6 col-lg-6">
                    {% media attribute.id, 'small' with {'class': 'img-responsive'} %}
                </div>
        {% elseif attribute is not empty and  homepageVideoGallery|length >= 3 and homepageVideoGallery|length % 2 == 0 %}
                <div class="text-center col-xs-12 col-sm-6 col-md-4 col-lg-4">
                    {% media attribute.id, 'small' with {'class': 'img-responsive'} %}
                </div>
        {% elseif attribute is not empty and  homepageVideoGallery|length >= 3 and homepageVideoGallery|length % 2 == 1 %}
                <div class="text-center col-xs-12 col-sm-6 col-md-4 col-lg-4">
                    {% media attribute.id, 'small' with {'class': 'img-responsive'} %}
                </div>
        {% endif %}
    {% endfor %} 
{% endblock %}