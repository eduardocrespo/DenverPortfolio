{% block homepageImageSlideshowGallery %}
    <div id="myCarousel" class="carousel slide" data-interval="false" data-ride="carousel">
        <ol class="carousel-indicators">
            {% for key, attribute in homepageImageSlideshowGallery %}
                {% if attribute is not empty %}
                    <li data-target="#myCarousel" data-slide-to="{{ loop.index0}}" {% if loop.index0 == 0 %}class="active" {% endif %}></li>
                {% endif %}
            {% endfor %}
        </ol> 
        <div class="carousel-inner">
            {% for key, attribute in homepageImageSlideshowGallery %}
                {% if attribute is not empty %}
                    <div class="item {% if loop.index0 == 0 %}active{% endif %}">
                        {% media attribute.id, 'big' with {'class': 'img-responsive text-center col-xs-12 col-sm-12 col-md-12 col-lg-12'} %}
                    </div>
                {% endif %}
            {% endfor %}
        </div>
        {% if homepageImageSlideshowGallery|length > 1 %}
            <a class="carousel-control left" href="#myCarousel" data-slide="prev">
                <span class="icon-prev"></span>
            </a>
            <a class="carousel-control right" href="#myCarousel" data-slide="next">
                <span class="icon-next"></span>
            </a>
        {% endif %}

    </div>
    {% if homepageImageSlideshowGallery|length > 1 %}
        <hr class="transition-timer-carousel-progress-bar" />
    {% endif %}
{% endblock %}